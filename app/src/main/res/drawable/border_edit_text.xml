<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="@color/color_white_grey" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="@dimen/dp_3"
        android:color="@color/color_full_back" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="@dimen/dp_10"
        android:top="@dimen/dp_10"
        android:right="@dimen/dp_10"
        android:bottom="@dimen/dp_10" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="@dimen/dp_50" >
    </corners>
</shape>