<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunasterisk.rememory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sunasterisk.rememory.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.addaction.AddActionActivity"/>
        <activity android:name=".ui.alarm.AlarmActivity"/>
        <activity android:name=".ui.classify.ClassifyActivity"/>
        <activity android:name=".ui.evaluate.EvaluateActivity"/>
        <activity android:name=".ui.daydetails.DayDetailsActivity"/>
        <activity android:name=".ui.launch.LaunchActivity"/>
        <activity android:name=".ui.summary.SummaryActivity"/>
    </application>

</manifest>
